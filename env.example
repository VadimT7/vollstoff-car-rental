# Valore Rental Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# APPLICATION
# ============================================

# Application URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin panel URL
ADMIN_URL=http://localhost:3001

# Node environment
NODE_ENV=development

# ============================================
# DATABASE
# ============================================

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/valor_rental?schema=public

# Direct database URL for migrations (bypasses connection pooling)
DIRECT_DATABASE_URL=postgresql://postgres:password@localhost:5432/valor_rental?schema=public

# ============================================
# REDIS
# ============================================

# Redis connection URL for caching and session management
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================

# Random string for signing tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth URL (same as app URL in production)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# STRIPE PAYMENTS
# ============================================

# Stripe publishable key (starts with pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Stripe secret key (starts with sk_)
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe webhook signing secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe API version
STRIPE_API_VERSION=2023-10-16

# ============================================
# SANITY CMS
# ============================================

# Sanity project ID
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id

# Sanity dataset (usually 'production' or 'development')
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API version (date format: YYYY-MM-DD)
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity auth token for server-side operations
SANITY_API_TOKEN=your-sanity-token

# Sanity Studio URL
NEXT_PUBLIC_SANITY_STUDIO_URL=http://localhost:3333

# ============================================
# FILE STORAGE (Cloudflare R2)
# ============================================

# Cloudflare account ID
CLOUDFLARE_ACCOUNT_ID=your-account-id

# R2 access key ID
R2_ACCESS_KEY_ID=your-access-key

# R2 secret access key
R2_SECRET_ACCESS_KEY=your-secret-key

# R2 bucket name
R2_BUCKET_NAME=flyrentals-assets

# R2 public URL (custom domain or R2.dev URL)
NEXT_PUBLIC_R2_PUBLIC_URL=https://assets.flyrentals.com

# ============================================
# EMAIL (Resend)
# ============================================

# Resend API key
RESEND_API_KEY=re_your_api_key

# From email address (must be verified in Resend)
EMAIL_FROM=flyrentalsca@gmail.com

# Reply-to email address
EMAIL_REPLY_TO=flyrentalsca@gmail.com

# Admin notification email
ADMIN_EMAIL=flyrentalsca@gmail.com

# ============================================
# SMS/WHATSAPP (Twilio)
# ============================================

# Twilio account SID
TWILIO_ACCOUNT_SID=your-account-sid

# Twilio auth token
TWILIO_AUTH_TOKEN=your-auth-token

# Twilio phone number (E.164 format)
TWILIO_PHONE_NUMBER=+14386803936

# WhatsApp sender number (if different)
TWILIO_WHATSAPP_NUMBER=+14386803936

# ============================================
# MAPS & GEOCODING
# ============================================

# Google Maps API key (for delivery zone maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Mapbox token (alternative to Google Maps)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# ============================================
# ANALYTICS & MONITORING
# ============================================

# Google Analytics 4 measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment
SENTRY_ENVIRONMENT=development

# Vercel Analytics (auto-injected in Vercel deployments)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================
# RATE LIMITING
# ============================================

# Upstash Redis REST URL (for rate limiting)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io

# Upstash Redis REST token
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# SECURITY
# ============================================

# Content Security Policy nonce (regenerated on each request)
CSP_NONCE_SECRET=your-csp-nonce-secret

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_3D_MODELS=true
NEXT_PUBLIC_ENABLE_STRIPE_IDENTITY=false
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_ABANDONED_CART_EMAILS=true

# ============================================
# BUSINESS CONFIGURATION
# ============================================

# Default currency (ISO 4217 code)
NEXT_PUBLIC_DEFAULT_CURRENCY=EUR

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Minimum rental age
MIN_RENTAL_AGE=25

# Default security deposit amount (in cents)
DEFAULT_DEPOSIT_AMOUNT=300000

# Cash payment requires card on file
CASH_REQUIRES_CARD_HOLD=true

# ============================================
# DEVELOPMENT
# ============================================

# Enable debug mode
DEBUG=valor:*

# Prisma log level
PRISMA_LOG_LEVEL=info

# Development webhook proxy (e.g., ngrok URL)
DEV_WEBHOOK_URL=https://your-ngrok-url.ngrok.io
